{
  "name": "locatify",
  "version": "2.0.1",
  "description": "Geo location and device orientation as an EventEmitter",
  "keywords": [
    "geolocation",
    "location",
    "browserify",
    "events"
  ],
  "author": "Maximilian Antoni (http://maxantoni.de)",
  "homepage": "https://github.com/mantoni/locatify.js",
  "main": "./lib/location-tracker.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "watch": "mochify --watch",
    "lint": "eslint .",
    "wd": "mochify --wd",
    "pretest": "npm run lint",
    "test": "mochify",
    "preversion": "npm test",
    "version": "changes",
    "postversion": "git push --follow-tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mantoni/locatify.js.git"
  },
  "eslintConfig": {
    "extends": "@studio",
    "env": {
      "browser": true
    }
  },
  "devDependencies": {
    "@studio/changes": "^1.4.0",
    "@studio/eslint-config": "^1.0.2",
    "eslint": "^4.19.1",
    "mochify": "^5.6.1",
    "sinon": "^5.0.7"
  },
  "files": [
    "lib",
    "README.md",
    "CHANGES.md",
    "LICENSE"
  ],
  "license": "MIT"
}
